<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

<div class="field">
 <span>Title</span>
 <%= f.text_field :title %>
</div>

<div class="field">
 <span>Body</span>
 <%=f.text_area :body %>
</div>

<div class="action">
 <span><%= f.submit 'Update Book' %></span>
</div>

<%=link_to "show", book_path(@book.id) %> |
<%=link_to "back", "/books" %>

<% end %>
